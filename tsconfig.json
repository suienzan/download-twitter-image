{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["**/*"]
}
